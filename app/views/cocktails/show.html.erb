<div class="show-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h1><%= @cocktail.name.capitalize %></h1>
      </div>
    </div>
    <div class="delete_btn">
      <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Do you really want to delete?"} %>
    </div>
<div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3>Ingredients:</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <table>
        <% @cocktail.doses.each do |dose| %>
          <% if dose.description == "1" %>
            <tr><td><i class="fas fa-glass-martini"></i> 1 dose of <%= dose.ingredient.name %></td><td><%= link_to "ðŸ—‘", dose_path(dose), method: :delete, data: { confirm: "Do you really want to delete?"} %></td></tr>
          <% else %>
            <tr><td><i class="fas fa-glass-martini"></i> <%= dose.description %> doses of <%= dose.ingredient.name %></td><td><%= link_to "ðŸ—‘", dose_path(dose), method: :delete, data: { confirm: "Do you really want to delete?"} %></td></tr>
          <% end %>
        <% end %>
       </table>
      </div>
    </div>
     <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3 style="font: Arial, font-size:20px">Add an ingredient:</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <%= simple_form_for [@cocktail, @dose], html: { class: "form-inline"} do |f| %>
        <%= f.association :ingredient, label: "Ingredient: ", prompt: "Select an ingredient", collection: Ingredient.order('name ASC'), required: false  %>
          <%= f.input :description, label: "Quantity: ", required: false, as: :integer, input_html: { style: 'width: 80px'} %>
          <%= f.button :submit, name: "commit", value: "Add", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
</div>
</div>

<%= link_to "Cocktail List", cocktails_path%>
