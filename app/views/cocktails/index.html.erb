<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path("banner_xgoy80") %>');">
  <div class="banner-content">
    <h1>Sip Savvy</h1>
    <p>Your best secret cocktails</p>
  </div>
</div>
<div class="index-wrapper">
  <div class="container">
    <div class="row">
        <% @cocktails.each do |cocktail| %>
           <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
            <div class="card-images">
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
            </div>
            <div class="card-description">
                <h2><%= cocktail.name %></h2>
                 <h4><%= link_to "Details", cocktail_path(cocktail) %></h4>
                </p>

              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
