
<div class="index-wrapper" style="margin-top: 100px; margin-bottom: 150px;">
  <div class="container">
    <div class="row">
        <% @cocktails.each do |cocktail| %>
           <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
            <div class="card-images">
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
            </div>
            <div class="card-description">
                <h2><%= cocktail.name %></h2>
                 <h4><%= link_to "Details", cocktail_path(cocktail) %></h4>
                </p>

              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
